            </div>
            <div class="form-group">
                <label asp-for="Ingrediente.CantidadDisponible" class="control-label"></label>
                <input asp-for="Ingrediente.CantidadDisponible" class="form-control" />
                <span asp-validation-for="Ingrediente.CantidadDisponible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingrediente.UnidadMedida" class="control-label"></label>
                <input asp-for="Ingrediente.UnidadMedida" class="form-control" />
                <span asp-validation-for="Ingrediente.UnidadMedida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingrediente.PrecioUnitario" class="control-label"></label>
                <input asp-for="Ingrediente.PrecioUnitario" class="form-control" />
                <span asp-validation-for="Ingrediente.PrecioUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
