@{
}

<h1>Edit</h1>

<h4>Ingrediente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ingrediente.IdIngrediente" />
            <div class="form-group">
                <label asp-for="Ingrediente.Nombre" class="control-label"></label>
                <input asp-for="Ingrediente.Nombre" class="form-control" />
