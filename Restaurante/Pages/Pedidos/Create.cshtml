@page
@model Restaurante.Pages.Pedidos.CreateModel
@{
}
<h1>Create Pedido</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pedido.IdProveedor" class="control-label"></label>
                <select asp-for="Pedido.IdProveedor" class="form-control" asp-items="Model.Proveedores"></select>
                <span asp-validation-for="Pedido.IdProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.FechaPedido" class="control-label"></label>
                <input asp-for="Pedido.FechaPedido" class="form-control" />
                <span asp-validation-for="Pedido.FechaPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Total" class="control-label"></label>
                <input asp-for="Pedido.Total" class="form-control" />
                <span asp-validation-for="Pedido.Total" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back to list</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
